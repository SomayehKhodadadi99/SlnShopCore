

@model EndPoint.ViewModels.Catalogs.CatalogTypeViewModel;
@{
    var title = "Create Type";
}



<form method="post" asp-action="Create">
    <div class="row p-3 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row p-3 border">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(model => model.Id)
            <input type="hidden" asp-for="Id" />

            <div class="col-8 pt-4">


                <div class="form-group row py-2">
                    <div class="col-4">
                        @Html.DisplayNameFor(model => model.Type)
                        <label asp-for="@Model.Type"></label>
                    </div>
                    <div class="col-8">

                     
                        @Html.TextBoxFor(model => model.Type);
                        <span asp-validation-for="@Model.Type" class="text-danger"></span>

                    </div>
                </div>

                <div class="form-group">
                <input type="submit" name="time" value="ثبت" class="btn btn-primary">
                    <a asp-page="index" class="btn btn-info">برگشت به لیست</a>
                </div>
          



            </div>
        </div>
        
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdn.ckeditor.com/4.13.0/standard-all/ckeditor.js"></script>
    <script>
        CKEDITOR.replace('Description', {
            language: 'fa',
            contentsLangDirection: 'rtl',
            height: 270,
        });
    </script>

}